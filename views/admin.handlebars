<div class="container pb-5">
  {{> header }}
  <form method="post">
    <div class="form-group">
      <label for="admin-username">Username</label>
      <input disabled type="text" class="form-control" id="admin-username" name="username" placeholder="admin" value="admin">
    </div>
    <div class="form-group">
      <label for="admin-password">Password</label>
      <input required type="password" class="form-control" id="admin-password" name="password" placeholder="********">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>